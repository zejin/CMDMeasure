citHeader("To cite CMDMeasure in publications use:")

citEntry(entry = "Article",
  title        = "CMDMeasure: Conditional Mean Dependence Measures via Energy Statistics",
  author       = personList(as.person("Ze Jin"),
                   as.person("Shun Yao"),
                   as.person("Xiaofeng Shao"),
                   as.person("David S. Matteson")),
  journal      = "R package version",
  year         = "2018",
  volume       = "1",
  number       = "0",

  textVersion  =
  paste("Ze Jin, Shun Yao, Xiaofeng Shao, and David S. Matteson (2018).",
        "CMDMeasure: Conditional Mean Dependence Measures via Energy Statistics.",
        "R package version 1.0.")
)